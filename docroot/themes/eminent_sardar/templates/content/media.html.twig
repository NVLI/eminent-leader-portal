{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
<article{{ attributes }}>
  <section class="container media_details" id="media_details">
    <div class="mediablock">
      <div class="row">
        <div class="col-sm-12">
          <div class="media-item">
            <div class="row">
              <div class="col-sm-4">
                <div class = "entry-meta">
                  <span class="meta-title">Meta Data</span>
                  <span>
                    {{ content|without('field_dc_title', 'field_dc_description', 'field_media_image', 'field_media_audio', 'field_media_document', 'field_dummy_document', 'field_media_video', 'field_media_video_embed_field') }}
                  </span>
                </div>
              </div>
              <div class="col-sm-8 media-content">
                {% if content %}
                  <div>
                    {{ content.field_dc_description }}
                  </div>
                  <section class="image">
                    {{ content.field_media_image }}
                  </section>
                  <div class="pdf-holder-ex">
                    {{ content.field_media_document }}
                  </div>
                  <div>
                    {{ content.field_media_audio }}
                  </div>
                  <div>
                    {{ content.field_media_video }}
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section
</article>
