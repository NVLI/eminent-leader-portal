{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
<div>
  <div class = "recent-work-wrap excibition_thumb">
    {% if content %}
      {% if media_type == "audio" %}
        <img src="/themes/eminent_sardar/images/audio.png" class="img-responsive">
      {% elseif media_type == "document" %}
        <img src="/themes/eminent_sardar/images/pdf.png" class="img-responsive">
      {% elseif media_type == "video" %}
        <img src="/themes/eminent_sardar/images/video.png" class="img-responsive">
      {% else %}
        {{ content.field_media_image }}
      {% endif %}
      <div class="overlay hidden-xs">
        {{ content.field_dc_title }}
      </div>
    {% endif %}

  </div>
</div>
