{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
<div class = "item-wrapper media-teaser">
  <section class = "item-body grid-equal-height">
    <article{{ attributes }}>
      {% if content %}
        {{ content }}
      {% endif %}
    </article>
  </section>
</div>
